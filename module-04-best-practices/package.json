{
  "name": "module-04-best-practices",
  "version": "1.0.0",
  "description": "GraphQL Yoga with TypeScript best practices - modular structure with User, Post, Comment domains",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run codegen && tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/merge": "^9.0.0",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.18.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}

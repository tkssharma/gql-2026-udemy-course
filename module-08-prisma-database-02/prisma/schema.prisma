// Prisma Schema for PostgreSQL
generator client {
  provider = "prisma-client-js"
}

// PostgreSQL datasource - uses environment variable
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with PostgreSQL-specific features
model User {
  id        String   @id @default(uuid())  // UUID instead of autoincrement
  email     String   @unique
  name      String
  role      Role     @default(USER)        // Enum type
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt            // Auto-update timestamp
  posts     Post[]
  profile   Profile?                       // One-to-one relation

  @@index([email])                         // Database index
}

// Profile - One-to-one relation example
model Profile {
  id     String  @id @default(uuid())
  bio    String?
  avatar String?
  userId String  @unique
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Post model with PostgreSQL features
model Post {
  id          String     @id @default(uuid())
  title       String
  content     String?
  published   Boolean    @default(false)
  authorId    String
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categories  Category[] // Many-to-many
  tags        String[]   // PostgreSQL array type
  metadata    Json?      // PostgreSQL JSON type
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([authorId])
  @@index([published])
}

// Category - Many-to-many relation
model Category {
  id    String @id @default(uuid())
  name  String @unique
  posts Post[]
}

// PostgreSQL Enum
enum Role {
  USER
  ADMIN
  MODERATOR
}
